<h2><%= t('users.edit.title') %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: t('users.edit.leave_it_blank'), required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, hint: t("users.edit.current_password_hint"), required: true %>
  </div>

  <div class="form-group">
    <%= f.button :submit, t("buttons.save"), class: 'btn btn-default' %>
  </div>
<% end %>

<h3><%= t('users.edit.cancel_my_account') %></h3>

<p><%= t('users.edit.unhappy') %> <%= link_to t('users.edit.cancel_my_account'), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to t('navigation.back'), :back %>
