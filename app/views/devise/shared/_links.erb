<%- if controller_name != 'sessions' %>
  <%= link_to t('session.sign_in'), new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('session.sign_up'), new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('session.forgot_password'), new_password_path(resource_name) %><br />
<% end -%>


<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('unlock.unlock_instrctions'), new_unlock_path(resource_name) %><br />
<% end -%>
